{
  "name": "my-portfolio",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "env-cmd -f ./packages/env/.env turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "env-cmd": "^11.0.0"
  }
}
