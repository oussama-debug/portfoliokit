{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "POSTGRES_URL",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "TWILIO_ACCOUNT_TOKEN",
        "TWILIO_ACCOUNT_SID",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "env": [
        "POSTGRES_URL",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "TWILIO_ACCOUNT_TOKEN",
        "TWILIO_ACCOUNT_SID",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "cache": false,
      "persistent": true
    },

    "@repo/supabase#start": {
      "outputs": [],
      "cache": false
    },
    "@repo/supabase#generate": {
      "dependsOn": ["@repo/supabase#start", "^generate"],
      "outputs": []
    },
    "@repo/supabase#lint": {
      "dependsOn": ["@repo/supabase#start", "check-types"],
      "outputs": []
    },
    "@repo/supabase#lint:report": {
      "dependsOn": ["@repo/supabase#start", "check-types"],
      "outputs": []
    }
  }
}
