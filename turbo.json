{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "setup": {
      "dependsOn": ["^build"],
      "env": [
        "API_DATABASE_USERNAME",
        "API_DATABASE_PASSWORD",
        "API_DATABASE_NAME",
        "API_DATABASE_HOST",
        "API_DATABASE_PORT",
        "API_SECRET_KEY_BASE"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "API_DATABASE_USERNAME",
        "API_DATABASE_PASSWORD",
        "API_DATABASE_NAME",
        "API_DATABASE_HOST",
        "API_DATABASE_PORT",
        "API_SECRET_KEY_BASE"
      ]
    }
  }
}
